<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XForms.AcquirePage">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.iOS>0,20,0,0</OnPlatform.iOS>
        </OnPlatform>
    </ContentPage.Padding>


    <StackLayout Padding="10,0">

        <Label Text="Acquire Page" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />

        <Button  Text="Acquire"  Clicked="OnAcquireClicked"/>

        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                <Label x:Name="acquireResponseLabel" Text="some text" />

            </StackLayout>
        </ScrollView>

    </StackLayout>
    
</ContentPage>